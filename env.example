# ===========================================
# CONFIGURACIÓN DE AWS
# ===========================================

# Credenciales AWS (OBLIGATORIAS)
AWS_ACCESS_KEY_ID=tu_access_key_aqui
AWS_SECRET_ACCESS_KEY=tu_secret_key_aqui
AWS_SESSION_ID=tu_session_id_aqui

# Región AWS (opcional, se puede sobrescribir en el código)
AWS_DEFAULT_REGION=us-east-1

# ===========================================
# CONFIGURACIÓN DE CELERY
# ===========================================

# URLs de Redis para Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Entorno de ejecución
ENVIRONMENT=development

# Debug mode
DEBUG=True

# ===========================================
# CONFIGURACIÓN DE YOLO
# ===========================================

# Ruta al modelo YOLO
YOLO_MODEL_PATH=yolo/weights/20251001-best.pt

# Umbral de confianza
YOLO_CONFIDENCE_THRESHOLD=0.6

# ===========================================
# CONFIGURACIÓN DE VIDEO
# ===========================================

# Stream por defecto
DEFAULT_STREAM_NAME=d83add525bd7

# Configuración de descarga
MAX_CONCURRENT_DOWNLOADS=3
MAX_RETRIES=5
READ_TIMEOUT=300

# ===========================================
# INSTRUCCIONES DE USO
# ===========================================

# 1. Copia este archivo a .env:
#    cp env.example .env

# 2. Edita .env con tus credenciales reales:
#    nano .env

# 3. NUNCA commitees el archivo .env al repositorio

# 4. Para usar en producción, configura las variables de entorno
#    directamente en tu servidor o plataforma de deployment
